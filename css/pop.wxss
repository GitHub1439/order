/* pop [[	*/
.pop{
	position: fixed;
	top:0;
	left:0;
	width:100%;
	height:100%;
	z-index: 1000;
}
.mask{
	width:100%;
	height:100%;
	background-color: rgba(0,0,0,.25);
}
.pop-container{
	width: 78%;
	background-color: #fff;
	position: absolute;
	top:50%;
	left:50%;
	transform: translateX(-50%) translateY(-50%);
	border-radius: 15rpx;
	overflow: hidden;
}
.pop-title{
	font-size:30rpx;
	text-align:center;
	line-height: 80rpx;
	padding:10rpx 30rpx 0;
	color: #1d1d1d;
}
.pop-close{
	width:40rpx;
	height:40rpx;
	line-height: 40rpx;
	text-align: center;
	position: absolute;
	right:25rpx;
	top:25rpx;
	font-size: 40rpx;
	color: #fff;
	background-color: #AEB1BE;
	border-radius: 8rpx;
	z-index:10;
}
.pop-bottom-close{
	width:72rpx;
	height:72rpx;
	position: absolute;
	left:50%;
	bottom:-120rpx;
	transform:translateX(-50%);
}
.pop-bottom-close image{
	width:70rpx;
	height:70rpx;
}
.pop-footer{
	display: flex;
	margin:10rpx 40rpx 40rpx;
}
.pop-footer button{
	width:100%;
	text-align: center;
	background-color: #fcc953;
	color:#fff;
	border:none;
	box-shadow: none;
	font-size: 30rpx;
	line-height: 80rpx;
}
.pop-footer .no{
	margin-right: 20rpx;
	background-color: #fff;
	border:1px solid #e5e5e5;
	color:#666;
}
