/* 选择商品属性 [[ */
.selection-attribute{
	position: absolute;
	right: 0;
	bottom: 34rpx;
	width: 112rpx;
	height: 40rpx;
	border-radius: 20rpx;
	font-size: 24rpx;
	line-height: 40rpx;
	text-align: center;
	color: #fff;

}
.selection-attribute .num{
	position: absolute;
	right:0;
	top:-15rpx;
	width: 32rpx;
	height:32rpx;
	line-height: 32rpx;
	font-size:22rpx;
	text-align: center;
	border-radius: 50%;
	padding:0;
}

