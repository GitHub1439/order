/* 右边商品 */
.right-side{
	width: 582rpx;
	padding:0 25rpx 0 10rpx;
}
.class-name {
	height: 70rpx;
	line-height: 70rpx;
	font-size: 28rpx;
	color: #AEB1BE;
}
.good{
	position: relative;
	padding: 35rpx 0;
}
.first-good{
	padding-top: 0;
}
.good-item {
	padding-bottom: 35rpx;
}
.g-info{
	display: flex;
}

.g-info .g-pic{
	width:200rpx;
	height: 200rpx;
}
.g-info .g-pic image{
	width: 200rpx;
	height: 200rpx;
	margin: 0 auto;
}
.g-info .g-detail{
	width:366rpx;
	height: 200rpx;
	margin-left: 22rpx;
}
.g-info .g-detail-name{
	font-size:32rpx;
	line-height: 32rpx;
	overflow: hidden;
	white-space: nowrap;
