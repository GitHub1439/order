/* 左边分类 menu [[	*/
.left-side{
	width:168rpx;
	background-color: #F5F6FA;
}
.menu-item {
	display:table;
	width:168rpx;
	height:130rpx;
	padding:0 30rpx;
	background-color: #F5F6FA;
	border-bottom:1rpx solid #EAEBF0;
	position: relative;
  box-sizing: border-box;
}

.menu-item:last-of-type{
	margin-bottom: 20rpx;
}
.menu-item.active{
	background-color: #fff;
	position: relative;
}
.menu-item.active::before{
	position: absolute;
	left:0;
	display: block;
	content:'';
	height:100%;
	width:6rpx;
	background-color: #AEB1BE;
	border-top-right-radius: 6rpx;
	border-bottom-right-radius: 6rpx;
}
.menu-item image{
	display: inline-block;
	position: relative;
	top:4rpx;
	margin-right: 16rpx;
}
.menu-item image.menu-hot{
	width:31rpx;
	height:31rpx;
}
.menu-item image.menu-new{
	width:30rpx;
	height:29rpx;
	margin-right: 17rpx;
}
.m-menu-name{
	display: table-cell;
	width:100%;
	vertical-align: middle;
	font-size: 27rpx;
}
.m-menu-count{
	position: absolute;
	top:20rpx;
	right:10rpx;
	width: 32rpx;
	height:32rpx;
	line-height: 32rpx;
	font-size:22rpx;
	text-align: center;
	border-radius: 50%;
}
/* 左边分类 menu ]]	*/
