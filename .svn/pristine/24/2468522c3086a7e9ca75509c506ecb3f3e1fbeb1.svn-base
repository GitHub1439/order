.top-search{
	height: 160rpx;
	background-color: #fff;
}
.top-search .search-wrap{
	margin-left: 16rpx;
}
/**
搜索
**/
.search-box {
	top: 60rpx;
}
.cur-city{
	height: 60rpx;
	padding-top: 20rpx;
	padding-left: 30rpx;
	display: flex;
	font-size: 28rpx;
	color:#70747F;
}
.cur-city text {
	margin-left: 40rpx;
}
.top-search {
	display:block;
}
.icon-youjiantou{
	position:fixed;
	top: 23rpx;
	transform:rotate(180deg);
	-ms-transform:rotate(180deg); /* IE 9 */
	-moz-transform:rotate(180deg); /* Firefox */
	-webkit-transform:rotate(180deg); /* Safari 和 Chrome */
	-o-transform:rotate(180deg); 	/* Opera */
}

.map-markers{
	position: fixed;
	top:160rpx;
	left:0;
	width:100%;
	height: calc(100% - 160rpx);
	overflow: hidden;
}

.marker-info{
	display: flex;
	margin: 20rpx;
	padding: 20rpx;
	min-height: 120rpx;
	position: relative;
	background-color:#fff;
	border-radius: 10rpx;
}
.marker-store {
	width: 548rpx;
	border-right: 1rpx solid #EAEBF0;
}
.store-distance {
	width: 160rpx;
	text-align: center;
}
.choosed-store {
	width: 130rpx;
	margin: 10rpx auto 0;
	padding: 5rpx 10rpx;
	color: #fff;
	font-size: 28rpx;
}
.distance {
	padding: 10rpx 0;
	font-size: 24rpx;
	color:#1F1F1F;
}
.marker-info .name{
	display: block;
	font-size: 32rpx;
	padding: 0 0 10rpx; 
	color: #1f1f1f;
}
.marker-info .address{
	font-size:24rpx;
	color: #888;
	padding: 10rpx 0;
}
.marker-info image.store-active{
	position:absolute;
  right:30rpx;
  top:50%;
  width:36rpx;
  height:36rpx;
  transform:translateY(-50%);
  -ms-transform:translateY(-50%); 	/* IE 9 */
  -moz-transform:translateY(-50%); 	/* Firefox */
  -webkit-transform:translateY(-50%); /* Safari 和 Chrome */
  -o-transform:translateY(-50%);

}
.time,
.phone {
  color: #666;
	font-size: 25rpx;
	padding: 10rpx 0 0;
}
.text-content {
  color: #999;
}