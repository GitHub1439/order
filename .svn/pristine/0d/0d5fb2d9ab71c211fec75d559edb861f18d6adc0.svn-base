@import '../../template/template.wxss';

page{
	overflow-y:hidden;
	height: 100%;
}
.body{
	width: 100%;
	height: 100%;
	overflow-y:auto;
}
.body .overflow-hidden{
	overflow-y:hidden;
}
.flex-between {
	display: flex;
	justify-content: space-between;
}
/**门店**/
.store-info{
	position: relative;
	padding: 20rpx 100rpx 20rpx 20rpx;
	border-bottom: 1rpx solid #EAEBF0;
	background-color: #fff;
}
.store-info .storename{
	font-size: 32rpx;
  padding: 0 0 10rpx;
  color: #1f1f1f;
}
.store-info .store-address{
  width:100%;
  padding-top: 10rpx; 
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
	font-size: 24rpx;
	color: #AEB1BE;
}
.icon-daohang {
	position: absolute;
	right:60rpx;
	top: 20rpx;
  color: #B0B3C0;
	font-size: 40rpx;
}
.icon-right {
	font-size: 28rpx;
	margin-top: -20rpx;
}


/**桌台**/
.table-number{
	line-height: 80rpx;
	padding:0 30rpx;
	background-color: #fff;
	border-bottom: 1rpx solid #EAEBF0;
}

.table-number .number{
	font-size:30rpx;
}


/****就餐方式**/
.type-container {
	padding: 30rpx;
	background-color: #fff;
	margin-bottom: 20rpx;
}

.type-container>view {
	width: 48%;
	height: 120rpx;
	line-height:  120rpx;
	text-align: center;
	font-size: 28rpx;
	color: #1f1f1f;
	border: 1px solid #70747F;
	border-radius: 4rpx;
}
.type-item > icon {
  display: inline-block;
  vertical-align: middle;
  font-size: 60rpx;
}
/**就餐时间、店内就餐、打包带走、备注等***/
.eat-content {
	margin-bottom: 20rpx;
}
.eat-item {
	padding: 30rpx;
	background-color: #fff;
}

/******堂食人数选择******/
.number-list {
  width: 100%;
  overflow-x:auto;
  white-space:nowrap;
  padding-top: 20rpx;
}
.number-item {
  display: inline-block;
  width: 20%;
  text-align: center;
}
.number-list text,.number-item text {
  display:inline-block;
  width: 90rpx;
  height: 60rpx;
  line-height:  60rpx;
  text-align: center;
	color: #1f1f1f;
	background-color: #F5F6FA;
  border-radius: 6rpx;
  -webkit-border-radius: 6rpx;
  -moz-border-radius: 6rpx;

}

.number-list text.active,.number-item text.active{
  color:#fff;

}
.o-remarks{
	padding-top: 20rpx;
	background-color: #fff;
}
.remarks-more {
  width: 100rpx;
  text-align: right;
}

/***商品***/
.goods-container {
	padding: 30rpx 30rpx 0;
	margin-bottom: 20rpx;
	background-color: #fff;
	color: #1f1f1f;
	font-size: 28rpx;
}
.good-title {
	line-height: 32rpx;
	font-size: 32rpx; 
	font-weight: bold;
}
.goods-content,
.good-coupon {
	padding: 30rpx 0;
}
.good-attributes{
	font-size: 22rpx;
	color: #B0B3C0;
}
.good-count-price{
	/* min-width: 200rpx; */
}
.good-count,
.good-price{
	display: inline-block;
	width: 80rpx;
	line-height: 32rpx;
}
.good-price{
	width: 120rpx;
}
.count{
	color: #B0B3C0;
}
.good-price{
	text-align: right;
}
.dashed-bottom {
	border-bottom: 1rpx dashed #EAEBF0;
}
.coupon {
	display: inline-block;
	padding: 0 6rpx;
	margin-right:10rpx;
	font-size: 24rpx;
	color: #fff;
	border-radius: 4rpx;
}
.total-item{
	display: flex;
	justify-content: flex-end;
	padding: 20rpx 0;
}
.orderTotalMoney {
	font-weight: bold;
}

/***支付方式***/
.pay-container {
	padding: 0 30rpx 20rpx;
	margin-bottom: 120rpx;
	font-size: 28rpx;
	background-color: #fff;
}
.pay-title{
	padding: 30rpx 0;
	font-size: 32rpx;
	font-weight: bold;
}
.pay-content {
	display: flex;
	justify-content: flex-start;
}
.pay-item {
  padding: 30rpx 0 0;
}
.no-pay-item{
  color: #B0B3C0;
}
.pay-content image {
	width: 40rpx;
	height: 40rpx;
	margin-right: 10rpx;
}
.checked-icon,
.check-radio{
  width: 40rpx;
  height: 40rpx;
}
.addDish{
	width: 20%;
	text-align: center;
	height: 60rpx;
	line-height: 60rpx;
}
.weui-cell__hd{
	display: flex;
	justify-content: space-between;
	padding: 16rpx 0rpx 16rpx 60rpx;
	align-items: center;
	border-radius: 10rpx;
}
.weui-cell__hd icon{
	width: 34rpx;
	height: 34rpx;
	display: inline;
	font-size: 16px;
	/* background-color: #E1C371; */
	color: rgba(0,0,0,0.3);
	margin-top: -20rpx;
	margin-right: 3rpx;
}
.weui-cell__hd .icon-radio-active{
	color: #E1C371;
}
.weui-cell__hd .icon-radio-disable{
	display: none;
}
.mem-balance{
	display: flex;
	justify-content: space-between;
}
.weui-cell__hd:nth-child(2){
	padding-bottom: 0;
}
.mem-scard{
	padding-top: 5rpx;
}
.cell__hd-hover{
	/* background-color: rgba(0,0,0,0.1); */
}