/* pages/template/template.wxss */
.picker-box {
  position: fixed;
  bottom: 0;
  width: 100%;
  font-size: 30rpx;
  background-color: #fff;
  z-index: 9999;
}
.picker-content {
  width: 100%;
  height: 200px;
}
.days-list {
  max-width: 33.33%;
  text-align: center;
}
.times-list {
  max-width:66.66%;
  text-align: center;
}
.picker-title {
  line-height: 80rpx;
  padding-left: 20rpx;
  background-color: #fa4d4f;
  color: #fff;
}
.picker-year {
  position: ralative;
  line-height: 40px;
}
.picker-hours,
.picker-minitue {
  display:inline-block;
  position: ralative;
  width: 50%;
  line-height: 40px;
}
.picker-year::after {
  position: absolute;
  content: "";
  right: 0;
  border-right:1px solid #666;
  width:3px;
  height: 40px;
}
.picker-hours::after {
  position: absolute;
  content: ":";
  right: 50%;
  height: 50px;
  width: 4px;
  color: #666;
  font-size: 40rpx;
  font-weight: bold;
}
.btn-list {
  display: flex;
  display: -webkit-flex;
  display: -moz-flex;
  justify-content: space-around;
  height: 80rpx;  
}
.btn-list text {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.exit {
  background-color: #e5e5e5;
}
.ensure {
  background-color:#fa4d4f;
  color: #fff;
}